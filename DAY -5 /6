public class InvertedPyramid {
    public static void main(String[] args) {
        int numRows = 5; 
        for (int i = 0; i < numRows; i++) {
            for (int j = 0; j < i; j++) {
                System.out.print(" ");
            }
            for (int k = 0; k < numRows - i; k++) {
                System.out.print("* ");
            }
            System.out.println(); 
        }
    }
}
